{% extends '::base.html.twig' %}

{% block body -%}
    <h1>InProces list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Projectname</th>
                <th>Subject</th>
                <th>Fromwho</th>
                <th>Createdat</th>
                <th>Errors</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('inproces_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.projectName }}</td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.fromWho }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.errors }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('inproces_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('inproces_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('inproces_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
